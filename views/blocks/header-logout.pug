
mixin header-logout(active, subActive)
    include login
    include register
    include email-confirm
    include forgot-password
    include reset-password
    header#header.header
        .header__logo
            | LOGO
            a.click-area(href="/")
        form.search-wrap
            input.search-input(type="text", name="search")
            a#search_submit.fas.fa-search(href="#")
        #header_menu_btn_m.header__hamburger
            i.fas.fa-bars
        .header__menu
            ul.menu
                li#header_menu_close_btn_m.menu__nav.thin.mobile.mobile-order-1
                    i.fas.fa-times.rotation-style
                li.menu__nav(class=(active === 1) ? 'active' : '')
                    | 關於平台
                    span.thin.mobile About
                    ul.nav-select(style="display: none;")
                        li.nav-select__option(class=(active === 1 && subActive === 1) ? 'active' : '')
                            | 平台緣起
                            a.click-area(href=(active === 1 && subActive === 1) ? false : "about.html")
                        li.nav-select__option(class=(active === 1 && subActive === 2) ? 'active': '')
                            | 最新消息
                            a.click-area(href=(active === 1 && subActive === 2) ? false : "news.html")
                        li.nav-select__option(class=(active === 1 && subActive === 3) ? 'active' : '')
                            | 數據創育專欄
                            a.click-area(href=(active === 1 && subActive === 3) ? false : "living-data.html")
                        li.nav-select__option(class=(active === 1 && subActive === 4) ? 'active' : '')
                            | 網站地圖
                            a.click-area(href=(active === 1 && subActive === 4) ? false : "map.html")
                        li.nav-select__option(class=(active === 1 && subActive === 5) ? 'active' : '')
                            | 相關連結
                            a.click-area(href=(active === 1 && subActive === 5) ? false : "link.html")
                li.menu__nav.new(class=(active === 2) ? 'active' : '')
                    | API市集
                    span.thin.mobile API Market
                    a.click-area(href=(active === 2) ? false : "api-list.html")
                    ul.nav-select(style="display: none;")
                        li.nav-select__option.new(class=(active === 2 && subActive === 1) ? 'active' : '')
                            | 最新上架
                            a.click-area(href=(active === 2 && subActive === 1) ? false : "api-new.html")
                        li.nav-select__option(class=(active === 2 && subActive === 2) ? 'active': '')
                            | 熱門上架
                            a.click-area(href=(active === 2 && subActive === 2) ? false : "api-hot.html")
                        li.nav-select__option(class=(active === 2 && subActive === 3) ? 'active' : '')
                            | 統計分析
                            a.click-area(href=(active === 2 && subActive === 3) ? false : "api-analytic.html")
                        li.nav-select__option(class=(active === 2 && subActive === 4) ? 'active' : '')
                            | 我的API
                            a.click-area(href=(active === 2 && subActive === 4) ? false : "api-custom.html")
                li.menu__nav.hot(class=(active === 3) ? 'active' : '')
                    | 數據探索
                    span.thin.mobile Explore
                    a.click-area(href=(active === 3) ? false : "data-explore.html")
                    ul.nav-select(style="display: none;")
