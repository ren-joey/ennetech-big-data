include ../mixins/input

#reset_password.popup__mask(style="display: none;")
    #reset_password_cancel_button.close-button
        .text 關閉
    .popup__wrap
        .popup__header
            span.welcome RESET PASSWORD
            span.title 重設密碼
        #reset_password_input.popup__body
            .popup__content
                +input-password('reset_password', 'reset_password', '', '請輸入新密碼', '必須包含(1)大小寫字母、(2)數字及(3)指定特殊字元(!$%@#*?&))', true)
                +input-password('confirm_reset_password', 'confirm_reset_password', '', '密碼確認', '', true)
                .input
                    #reset_password_next_button.confirm-button 重設密碼
        #reset_password_complete.popup__body(style='display: none;')
            .popup__content
                .input
                    | 密碼變更完成
                    br
                    | 使用者帳號: XXXXXXXX
                    | 您現在可以使用新的密碼登入
                .input
                    #reset_password_complete_button.confirm-button 回首頁

