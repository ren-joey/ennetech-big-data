mixin header-login(active, subActive)
    include login
    include register
    include email-confirm
    include forgot-password
    include reset-password
    header#header.header
        .header__logo
            | LOGO
            a.click-area(href="/")
        form.search-wrap
            input.search-input(type="text", name="search")
            a#search_submit.fas.fa-search(href="#")
        #header_menu_btn_m.header__hamburger
            i.fas.fa-bars
        .header__menu
            ul.menu
                li#header_menu_close_btn_m.menu__nav.thin.mobile.mobile-order-1
                    i.fas.fa-times.rotation-style
                li.menu__nav(class=(active === 1) ? 'active' : '')
                    | 關於平台
                    span.thin.mobile About
                    ul.nav-select(style="display: none;")
                        li.nav-select__option(class=(active === 1 && subActive === 1) ? 'active' : '')
                            | 平台緣起
                            a.click-area(href=(active === 1 && subActive === 1) ? false : "about.html")
                        li.nav-select__option(class=(active === 1 && subActive === 2) ? 'active': '')
                            | 最新消息
                            a.click-area(href=(active === 1 && subActive === 2) ? false : "news.html")
                        li.nav-select__option(class=(active === 1 && subActive === 3) ? 'active' : '')
