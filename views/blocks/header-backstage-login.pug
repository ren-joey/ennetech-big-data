mixin header-backstage-login(active)
    header#header.header
        .header__logo
            | LOGO
            a.click-area(href="/")
        #header_menu_btn_m.header__hamburger
            i.fas.fa-bars
        .header__menu
            ul.menu
                li#header_menu_close_btn_m.menu__nav.thin.mobile.mobile-order-1
                    i.fas.fa-times.rotation-style
                li.menu__nav(class=(active === 1) ? 'active' : '')
                    | 內容管理
                    a.click-area(href=(active === 1) ? false : "backstage-banner.html")
                    //- ul.nav-select(style="display: none;")
                    //-     li.nav-select__option
                    //-         | living-data
                    //-         a.click-area(href="living-data.html")
                li.menu__nav(class=(active === 2) ? 'active' : '')
                    | 會員管理
                    a.click-area(href=(active === 2) ? false : "backstage-member.html")
                li.menu__nav(class=(active === 3) ? 'active' : '')
                    | 數據管理
                    a.click-area(href=(active === 3) ? false : "backstage-api.html")
                li.menu__nav(class=(active === 4) ? 'active' : '')
                    | 權限管理
                    a.click-area(href=(active === 4) ? false : "backstage-admin.html")
                li.menu__nav(class=(active === 5) ? 'active' : '')
                    | 系統管理
                    a.click-area(href=(active === 5) ? false : "backstage-access-log.html")
                li.menu__nav.mobile
                    | 登出
                    span.thin.mobile LOGOUT
                    a.click-area(href="backstage-logout.html")
                li.menu__nav.mobile.mobile-order-2.mobile-thin
                    i.fas.fa-user.inline
                    | &nbsp;歡迎，陳先生
                    //- a#login_button_m.click-area(href="#")
                li.menu__nav.pc
                    i.fas.fa-user.inline
                    | &nbsp;歡迎，陳先生
                    ul.nav-select(style="display: none;")
                        li.nav-select__option
                            | 登出
                            a.click-area(href="backstage-logout.html")
                    //- a#login_button.click-area(href="#")