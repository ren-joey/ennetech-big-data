include ../mixins/input

#login.popup__mask(style="display: none;")
    #login_cancel_button.close-button
        .text 關閉
    .popup__wrap
        .popup__header
            span.welcome WELCOME
            span.title 觀迎使用數據創育平台
        .popup__body
            .popup__content
                +input-default('login_account', 'account', '', '電子郵件')
                +input-password('login_password', 'password', '', '請輸入12-16碼英數混合密碼', '英文字母需區分大小寫')
                +input-verify('login_verify', 'verify', '', '請輸入圖形內容')
                .input
                    #login_confirm_button.confirm-button 登入
                .input
                    #register_button.gray-button 加入會員
                .input
                    .gray-button 忘記密碼

